<h1 class="center">先生詳細
  <%= user.fullName %>
</h1>

<table class="table">
  <tr>
    <th>名前</th>
    <td>
      <%= user.fullName %>
    </td>
  </tr>
  <tr>
    <th>Eメール</th>
    <td>
      <%= user.email%>
    </td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td>
      <%= user.tell%>
    </td>
  </tr>
  <tr>
    <th>担当コース</th>
    <td>
      <%= user.teach%>
    </td>
  </tr>
  <tr>
    <th>パスワード</th>
    <td>********</td>
  </tr>
</table>

<div class="center">
  <a class="button" href="<%=`/users/${user._id}/edit`%>">
    編集
  </a>
</div>
<div class="center">
  <a class="button" href="<%= `/users/${user._id}/delete?_method=DELETE` %>" onclick="return confirm('削除してもよろしいですか?')" a>削除</a>
</div>
<div class="center">
  <a class="button" href="/users">一覧</a>
</div>
