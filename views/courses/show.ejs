<h1 class="center">コース名:
  <%= course.title %>
</h1>

<table class="table">
  <tr>
    <th>コース名
    </th>
    <td>
      <%= course.title %>
    </td>
  </tr>
  <tr>
    <th>概要</th>
    <td>
      <%= course.description%>
    </td>
  </tr>
  <tr>
    <th>定員</th>
    <td>
      <%= course.maxStudents%>
      名
    </td>
  </tr>
  <tr>
    <th>担当</th>
    <td>
      <%= course.teacher%>
      先生
    </td>
  </tr>
  <tr>
    <th>料金</th>
    <td>¥
      <%= course.cost%>
    </td>
  </tr>
</table>


<div>
  <a class="button" href="<%=`/courses/${course._id}/edit`%>">
    編集
  </a>
</div>
<div>
  <a class="button" href="<%= `/courses/${course._id}/delete?_method=DELETE` %>" onclick="return confirm('削除してよろしいですか？')" a>削除</a>
</div>
<div>
  <a class="button" href="/courses">一覧</a>
</div>
